{
  "kind": "collectionType",
  "collectionName": "actions",
  "info": {
    "singularName": "action",
    "pluralName": "actions",
    "displayName": "action"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "duration": {
      "type": "integer"
    },
    "level": {
      "type": "integer",
      "default": 1
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "task",
        "habit",
        "trigger",
        "principle",
        "technique"
      ],
      "default": "task"
    },
    "image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "card": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::card.card",
      "inversedBy": "actions"
    },
    "steps": {
      "type": "component",
      "repeatable": true,
      "component": "action.step"
    }
  }
}
